#include <stdio.h>
 
double average(int n, int a[]);
 
int main(void)
{
    int a[5] = { 7, 1, -3, 4, 5 };
    double ave;
 
    ave = average(5, a);    
     
    printf("average of a[]: %.1lf\n", ave);
 
    return 0;
}
 
double average(int n, int a[])
{
    int i;
    int sum;
 
    sum = 0;
 
    for (i=1; i<n; i++)
        sum += (*a)++;
 
    return sum / n;
}
