#include <stdio.h>

double determinant2x2(double a, double b, double c, double d);


int main(){
  double a, b, c, d;

  printf("a.\nInput> ");
  scanf("%lf %lf %lf %lf", &a, &b, &c, &d);

  printf("matrix A:\n  %lf %lf\n  %lf %lf\n\n", a, b, c, d);
  
  printf("determinant: %lf\n", determinant2x2(a, b, c, d));

  

  return 0;
}

double determinant2x2(double a, double b, double c, double d){
  return a*d-b*c;
}


